<%= form_for post do |f| %>
  <fieldset>
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, categories, :id, :name, prompt: 'Select a category' %>
  </fieldset>

  <fieldset>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </fieldset>

  <fieldset>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </fieldset>

  <%= f.submit class: 'btn btn-default' %>
<% end %>
